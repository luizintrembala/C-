#include <stdio.h>

int main()
{
    printf("---Menu de Cores---");
    printf("\n1 - Cinza");
    printf("\n2 - Preto");
    printf("\n3 - Azul");
    printf("\n4 - Branco");
    printf("\n5 - Amarelo");
    
    int entrada;
    
    printf("\nSelecione uma cor da lista acima: ");
    scanf("%d",&entrada);
    
    switch(entrada){

        case 1:
            printf("\n\tA cor selecionada foi Cinza!");
        break;

        case 2:
            printf("\n\tA cor selecionada foi Preto!");
        break;

        case 3:
            printf("\n\tA cor selecionada foi  Azul!");
        break;

        case 4:
            printf("\n\tA cor selecionada foi Branco!");
        break;

        case 5:
            printf("\n\tA cor selecionada foi Amarelo!");
        break;

        default:
            printf("\nOpção Inválida!");
        break;
    }
    return 0;

}
